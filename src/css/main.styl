body, html {
  width: 100%;
  height: 100%;
  margin: 0;
  padding: 0;
  overflow: hidden;
  font-size: 14px;
  font: 10pt "Helvetica Neue", Arial, Helvetica, sans-serif;
  background: url("../images/noisy_grid.png") #fff;
}

.map {
  width: 100%;
  height: 100%;
  margin: 0;
  padding: 0;
  overflow: hidden;
}

.sideBar {
  position: absolute;
  width: 350px;
  top: 10px;
  left: 10px;
  bottom: 10px;
  z-index: 30;
  transition: width 500ms;
  background-color: rgba(255, 255, 255, 0.95);
  border-radius: 2px;
  box-shadow: 0 -1px 1px rgba(0,0,0,0.15), 0 2px 3px rgba(0,0,0,0.25);
}

.sideBar.collapsed {
  width: 40px;
}

.sideBar .tabs {
  width: 40px;
  height: 100%;
  border-top-left-radius: 2px;
  border-bottom-left-radius: 2px;
  background: #ffffff;
}

.mapControls {
  position: absolute;
  left: 50px;
  top: 0px;
  transition: left 500ms;
}

.mapControls.sideBarOpen {
  left: 360px;
}

.homeButton {
  position: absolute;
  top: 85px;
  left: 12px;
  z-index: 30;
}

.locateButton {
  position: absolute;
  top: 125px;
  left: 12px;
  z-index: 30;
}

.search {
	position: absolute;
	z-index: 30;
	top: 10px;
	left: 60px;
}

.basemapToggle {
  position: absolute;
  top: 20px;
  right: 20px;
  z-index: 30;
}