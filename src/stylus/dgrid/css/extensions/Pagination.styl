@import "../../../variables";

.dgrid-status {
	margin: $dgrid-extension-pagination-status-margin;
	padding: 0;
}

.dgrid-pagination {
	.dgrid-status {
		float: left;
		line-height: $line-height;
	}
	.dgrid-navigation, 
	.dgrid-page-size {
		float: right;
		margin: $dgrid-extension-pagination-navigation-margin;
		line-height: $line-height;;
	}
	.dgrid-page-size {
		margin: $dgrid-extension-pagination-navigation-margin;
		padding: 1px;
	}
	.dgrid-page-link {
		font-weight: $dgrid-extension-pagination-navigation-font-weight;
		text-decoration: $dgrid-extension-pagination-navigation-text-decoration;
		color: $dgrid-extension-pagination-navigation-text-color;
		padding: $dgrid-extension-pagination-navigation-link-padding;
	}
	.dgrid-pagination-links {
		.dgrid-page-disabled { // This style is also for current page 
			color: $white-color;
			background: $highlight-color;
			border-radius: 2px;
			margin: 0 4px;
		}
	}
}

.dgrid-first, .dgrid-last, .dgrid-next, .dgrid-previous {
	font-size: 130%;
}
.dgrid-pagination .dgrid-page-disabled,
.has-ie-6-7 .dgrid-navigation .dgrid-page-disabled,
.has-ie.has-quirks .dgrid-navigation .dgrid-page-disabled {
	color: $disabled-text-color;
	cursor: default;
}
.dgrid-page-input {
	width: 2em;
	text-align: center;
	margin: 0 $dgrid-extension-pagination-navigation-margin;
}

/* indicator of a successful load */

#dgrid-css-extensions-Pagination-loaded { 
	display: none; 
}