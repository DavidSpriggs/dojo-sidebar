body, html {
  width: 100%;
  height: 100%;
  margin: 0;
  padding: 0;
  overflow: hidden;
  font-size: 14px;
  font: 10pt "Helvetica Neue", Arial, Helvetica, sans-serif;
  background: url("../images/noisy_grid.png") #fff;
}

.map {
  width: 100%;
  height: 100%;
  margin: 0;
  padding: 0;
  overflow: hidden;
}

.mapControls {
  position: absolute;
  /*left: 50px;*/
  top: 0px;
  transition: left 500ms;
}

.mapControls.sideBarOpen {
  left: 360px;
}

.homeButton {
  position: absolute;
  top: 85px;
  left: 12px;
  z-index: 30;
}

.locateButton {
  position: absolute;
  top: 125px;
  left: 12px;
  z-index: 30;
}

.search {
	position: absolute;
	z-index: 30;
	top: 10px;
	left: 60px;
}

.basemapToggle {
  position: absolute;
  top: 10px;
  right: 10px;
  z-index: 30;
}